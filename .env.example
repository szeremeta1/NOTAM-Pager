# Server Configuration
PORT=3000

# Airport Configuration
AIRPORT_CODE=KBLM
# Polling interval in milliseconds (default: 5 minutes)
POLL_INTERVAL=300000

# Pager Configuration (REQUIRED)
PAGER_PHONE_NUMBER=
PAGER_URL=https://secure.spokwireless.net

# State Management
# Maximum number of NOTAM IDs to store (default: 1000)
MAX_STORED_NOTAMS=1000
# Send the latest NOTAM once at startup to verify delivery (default: true)
STARTUP_SEND_LATEST=true

# FAA NMS API Settings
# Base URL for the FAA NMS NOTAM API (required)
FAA_NMS_API_URL=https://your-nms-endpoint.example/notams
# API key for the NMS endpoint (required)
FAA_NMS_API_KEY=
# Header name used to pass the key (default: x-api-key)
FAA_NMS_API_KEY_HEADER=x-api-key
# Request timeout in ms (default: 15000)
FAA_NMS_TIMEOUT=15000
# Maximum NOTAMs to request per poll (default: 200)
FAA_NMS_MAX_RESULTS=200
