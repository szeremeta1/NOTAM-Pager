# Server Configuration
PORT=3000

# Airport Configuration
AIRPORT_CODE=KBLM
# Polling interval in milliseconds (default: 5 minutes)
POLL_INTERVAL=300000

# Pager Configuration (REQUIRED)
PAGER_PHONE_NUMBER=
PAGER_URL=https://secure.spokwireless.net

# State Management
# Maximum number of NOTAM IDs to store (default: 1000)
MAX_STORED_NOTAMS=1000
# Send the latest NOTAM once at startup to verify delivery (default: true)
STARTUP_SEND_LATEST=true

# FAA NOTAM Search Playwright Settings
# Base URL for the FAA NOTAM Search UI
FAA_BASE_URL=https://notams.aim.faa.gov/notamSearch
# Navigation/download timeout in ms
FAA_FETCH_TIMEOUT=45000
# Retry count and delay (ms) for download attempts
FAA_RETRIES=3
FAA_RETRY_DELAY_MS=2000
# Browser engine preference (chromium|firefox|webkit); others are used as fallbacks
FAA_BROWSER=chromium
# Set to false to watch the browser; true keeps headless
FAA_HEADLESS=true
